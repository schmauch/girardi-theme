@font-face {
	font-family: 'avantgarde';
	src: url(../fonts/AVGARDR2.otf) format('opentype'),
	     url(../fonts/AVGARDR2.ttf) format('truetype');
}

@font-face {
	font-family: 'avantgarde-semibold';
	src: url(../fonts/AVGARDD2.otf) format('opentype'),
	     url(../fonts/AVGARDD2.ttf) format('truetype');
}

html, body {
    min-height: 100%;
    background-color: white;
    margin: 0;
    padding: 0;
}

body {
    display: flex;
    flex-direction: column;
    height: 100vh;
    /*background-color: #ffffff;*/
    font-family: avantgarde;
    letter-spacing: 0.05em;
    text-align: center;
}

.container {
    position: relative;
    max-width: 96em;
    margin: 1em;
    text-align: left;
}

#logo {
    position: relative;
    width: 18em;
    max-width: 80vw;
    height: auto;
}

#logo svg {
    width: 100%;
    height: auto;
    color: white;
    mix-blend-mode: difference;
}

#jumbotron {
    position: absolute;
    width: 100vw;
    height: 66.666vw;
    top: 0;
    left: 0;
    background-image: url(/images/weihnachten2020q.jpg);
    background-size: cover;
}

#navBar {
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

main {
    flex-grow: 1;
    /*background-color: white;*/
}

.skiplink {
    display: block;
    position: fixed;
    top: -100%;
    width: 100%;
    padding: 1em;
    background-color: black;
    color: white;
}

.skiplink:focus {
    top: 0;
}

/* search box */
#searchBox {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: stretch;
    position: relative;
}

#searchBox input {
    display: block;
    width: 2em;
    height: 2em;
    padding: 0.25em;
    border: none;
    background-image: url('../images/magnifying-glass.svg');
    background-size: contain;
    background-position: right center;
    background-repeat: no-repeat;
}

#searchBox input:focus,
#searchBox input:valid {
    flex-grow: 3;
    width: auto;
    margin: 0 0.5em;
    border: 1px solid #999999;
    background-image: none;
}

#searchBox > button {
    display: block;
    width: 0;
    padding: 0;
    border: none;
    overflow: hidden;
}

#searchBox button:focus,
#searchBox > input:focus ~ button,
#searchBox > input:valid ~ button {
    width: auto;
    margin: 0 0.5em;
    padding: 0.25em;
    border: 1px solid red;
    background-color: #999999;
}

#searchBox > button:focus,
#searchBox input:focus ~ button, 
#searchBox input:valid ~ button {
    display: block;
    flex-grow: 1;
}

/* ------------------------------- MAIN MENU ------------------------------- */
#mainMenu {
    margin: 0;
    padding: 0;
    text-align: right;
}

#mainMenu .no-js-open,
#mainMenu .no-js-dismiss {
    display: none;
}

#mainMenu.no-js .no-js-open {
    display: block;
    color: black;
}

#mainMenu.no-js .no-js-dismiss {
    display: block;
    color: white;
} 

#mainMenu > .accessibleMenuButton {
    padding: 0.5em;
    border: none;
    background-color: white;
    color: black;
    font-size: 1.5em;
    line-height: 1.5em;
    text-align: left;
    vertical-align: top;
}

#mainMenu .accessibleMenuList {
    margin: 0;
    padding: 0;
}

#mainMenu > .accessibleMenuButton[aria-expanded=false] {
    display: inline-block;
    position: relative;
    padding: 0.5em;
    border: none;
    background-color: white;
    color: black;
    font-size: 1.5em;
    line-height: 1.5em;
    text-align: left;
    vertical-align: top;
}

#mainMenu > .accessibleMenuButton[aria-expanded=true] {
    display: block;
    position: fixed;
    right: 80vw;
    top: 0;
    background-color: black;
    color: white;

}

#mainMenu > .accessibleMenuList {
    position: fixed;
    width: 80vw;
    height: auto;
    top: 0;
    right: 0;
    padding: 0;
    background-color: black;
    text-align: left;
    list-style-type: none;
}

#mainMenu .accessibleMenuList .accessibleMenuButton {
    display: inline-block;
    width: 1em;
    margin: 0 0.5em;
    border: none;
    background-color: black;
    color: white;
    line-height: 1.5em;
    vertical-align: top;
}

#mainMenu .accessibleMenuButton:hover,
#mainMenu .accessibleMenuButton:focus {
    background-color: #999999;
}

#mainMenu li {
    padding: 0.5em;
}

#mainMenu a {
    display: inline-block;
    color: white;
    text-decoration: none;
}

#mainMenu a:hover,
#mainMenu a:focus {
    background-color: #999999;
    text-decoration: underline;
}

#mainMenu li:hover .accessibleMenuList {
    display: block;
}

#mainMenu li:hover .accessibleMenuButton .open {
    display: none;
}

#mainMenu li:hover .accessibleMenuButton .dismiss {
    display: block;
}

#mainMenu .accessibleMenuList .accessibleMenuList {
    position: relative;
    text-align: left;
}

#mainMenu .accessibleMenuList .accessibleMenuList li {
    display: block;
    padding-left: 1em;
}

#mainMenu:target,
#mainMenu.no-js:target {
    display: block;
    position: fixed;
    z-index: 1000000;
}

#mainMenu.no-js .no-js-open {
    display: inline-block;
    position: relative;
    padding: 0.5em;
    font-size: 2em;
}

#mainMenu:target .no-js-open, 
#mainMenu.no-js:target .no-js-open {
    display: none;
}

#mainMenu.no-js .no-js-dismiss {
    display: none;
}

#mainMenu:target .no-js-dismiss, 
#mainMenu.no-js:target .no-js-dismiss {
    display: block;
    position: fixed;
    top: 0;
    right: 80vw;
    padding: 0.5em;
    font-size: 2em;
    background-color: black;
    color: white;
}
#mainMenu:target .accessibleMenuList,
#mainMenu.no-js:target .accessibleMenuList {
    display: block;
    background-color: black;
}

#mainMenu:target > .accessibleMenuList .accessibleMenuButton,
#mainMenu.no-js:target > .accessibleMenuList .accessibleMenuButton {
    display: none;
}

#mainMenu:target .accessibleMenuList .accessibleMenuList,
#mainMenu.no-js:target .accessibleMenuList .accessibleMenuList,
#mainMenu:target .accessibleMenuList .accessibleMenuList .accessibleMenuList, 
#mainMenu.no-js:target .accessibleMenuList .accessibleMenuList .accessibleMenuList{
    display: block !important;
    position: relative;
    background-color: black;
}

#mainMenu:target a,
#mainMenu.no-js:target a {
    color: white;
}

/* --------------------------------- CONTENT ------------------------------- */
h1 {
    font-family: avantgarde-semibold;
    color: black;
    font-weight: normal;
}


/* --------------------------------- FOOTER -------------------------------- */
footer {
    margin-top: 6em;
    padding: 0;
    background-color: black;
    color: white;
}

#footer {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    /*padding-top: 1.8cm !important;*/
    padding: 0;
    font-size: 0.8em;
    line-height: 2em;
}

.footer-col {
    display: flex;
    flex-direction: column;
    margin-top: 1em;
    padding: 0;
}

.footer-col:first-of-type {
    width: 100%;
}

.footer-col:nth-of-type(2) {
    flex-grow: 1;
}

.footer-col:last-of-type {
    text-align: right;
}

#footer span {
    display: block;
}

#footer a {
    color: white;
}

#footer-som a {
    text-decoration: none;
}

#footer-som svg {
    display: inline-block;
    width: auto;
    height: 1.5em;
    vertical-align: text-top;
}

#macher {
    display: block;
    position: absolute;
    width: auto;
    height: 8em;
    top: -5em;
    right: 0;
    padding: 0;
    vertical-align: bottom;
    box-shadow: 0em 0em 0.5em rgba(0, 0, 0, 0.5);
}

#macher img {
    height: 100%;
    width: auto;
}

/* #############################################################################
                                 MEDIA QUERIES
############################################################################# */

/*###################################### 36em ############################### */
@media screen and (min-width: 36em) {

    #footer {
        flex-wrap: nowrap;
        padding-top: 4em;
    }
    
    .footer-col:first-of-type {
        width: auto;
        flex-grow: 1;
    }
    
    .footer-col:last-of-type {
        flex-grow:  1;
    }
    
    #macher {
        right: 3em;
    }
}

/*###################################### 72em ############################### */

@media screen and (min-width: 72em) {

    .container {
        max-width: 70em;
        margin: 1em auto; 
    }

    #mainMenu {
        position: relative;
    }
    
    #mainMenu li {
        display: block;
        width: auto;    
    }
    
    #mainMenu > .accessibleMenuButton[aria-expanded] {
        display: none !important;
        position: relative;
    }
    
    #mainMenu > .accessibleMenuButton,
    #mainMenu .accessibleMenuButton,
    #mainMenu .accessibleMenuList .accessibleMenuButton {
        background-color: white;
        color: black;
    }
    
    #mainMenu .accessibleMenuButton:hover,
    #mainMenu .accessibleMenuButton:focus {
        background-color: #999999;
    }
    
    #mainMenu > .accessibleMenuList {
        display: flex !important;
        justify-content: flex-end;
        position: relative;
        width: 100%;
        text-align: right;
        background-color: white;
    }
    
    #mainMenu.no-js > .accessibleMenuList {
        display: none !important;
    }
 
    #mainMenu > .accessibleMenuList > li {
        display: block;
        width: auto;
        white-space: nowrap;
    }
    
    #mainMenu a {
        color: black;
    }
    
    #mainMenu a:hover,
    #mainMenu a:focus {
        background-color: #999999;
        text-decoration: underline;
    }
    
    #mainMenu > .accessibleMenuList .accessibleMenuList {
        position: absolute;
        top: 100%;
        background-color: white;
        box-shadow: 0.2em 0.5em 0.5em rgba(0, 0, 0, 0.5);
    }
           
    #mainMenu > .accessibleMenuList .accessibleMenuList .accessibleMenuList {
        position: relative;
        box-shadow: none;
    }
    #mainMenu .accessibleMenuList .accessibleMenuList li {
        padding-left: 0.5em;
    }
    
    #mainMenu:target,
    #mainMenu.no-js:target {
        display: block;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        width: 100%;
        background-color: black;
        text-align: left;
        z-index: 100000;
    }
    
    #mainMenu:target > .no-js-dismiss,
    #mainMenu.no-js:target > .no-js-dismiss {
        top: 0;
        right: auto;
        left: 0;
        padding: 0 0.5em;
    }

    #mainMenu:target > .accessibleMenuList,
    #mainMenu.no-js:target > .accessibleMenuList {
        display: flex !important;
        flex-direction: row;
        justify-content: space-evenly;
        align-items: start;
        position: relative;
        background-color: black;
        text-align: left;
    }

    #mainMenu:target > .accessibleMenuList > li {
        display: block;
        width: auto;
        background-color: black;
        color: white
    }
    
    .footer-col,
    .footer-col:first-of-type,
    .footer-col:last-of-type {
        flex-direction: row;
        width: auto;
    }
    
    .footer-col:first-of-type {
        flex-grow: 5;
        justify-content: flex-start;
        padding-left: 0;
        padding-right: 1em;
        text-align: left;
    }
    
    .footer-col:nth-of-type(2) {
        flex-grow: 4;
        justify-content: center;
        text-align: center;
        padding-left: 0;
        padding-right: 0;
    }
    
    .footer-col:last-of-type {
        flex-grow: 3;
        justify-content: flex-end;
        padding-left: 1em;
        padding-right: 0;
        text-align: right;
    }
    .footer-col span {
        margin: 0 0.5em;
    } 
}

/*###################################### 96em ############################### */

